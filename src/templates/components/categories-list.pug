mixin categories-list(items)
  .categories__list.cells
    each elm, index in cats
      .categories__item.cell.cell-sm-6.cell-lg-4.cell-xl-3
        .categories__bg
          a.categories__image(href="category.html")
            img(src=elm.pic)
          .categories__body
            a.categories__link(href="category.html")
              .categories__title= elm.title
            if elm.subcats
              ul.categories__subcats.subcats__list
                each itm in elm.subcats 
                  li.subcats__item 
                    a.subcats__link(href="subcategory.html")= itm