      picD: require("/src/images/content-images/promo-desk.jpg")
    },
    {
      picD: require("/src/images/content-images/promo-desk.jpg")
    }
  ];
.section.hero
  .slider.hero__slider
    each elm in listhero
      .slider__item
        .hero__item
          .hero__bg(class={"hero__bg--solo": !elm.descr && !elm.title && !elm.btn})
            if elm.picD || elm.img
              picture
                if elm.picM
                  source(media="(max-width: 767px)" srcset=elm.picM)
                source(media="(min-width: 768px)" srcset=elm.picD)
                img(src=elm.picD, loading="lazy")
          if elm.descr || elm.title || elm.btn
            .wrap.hero__wrap
              .hero__text
                if elm.descr
                  .hero__descr= elm.descr
                .hero__title= elm.title
                if elm.btn
                  .hero__cta
                    a.button.button-primary.hero__button(href="")= elm.btn
                      span.button__icon
                        include ../../images/inline-svgs/right.svg

