.header.header--v1.mheader--v1
  .mheader
    .wrap
      .mheader__row
        .mheader__logo
          .logo
            a.logo__link(href="/")
              .logo__image
                include ../../images/theme-images/logo.svg
        .mheader__phones
          .phones.connect
            .dropdown
              a.dropdown__toggle(href="tel:+73517788800") +7 (351) 778-88-00
                .dropdown__icon
                  include ../../images/inline-svgs/dropdown.svg
              .dropdown__body
                .connect__list
                  each item, index in phones
                    if index != 0
                      .connect__item
                        a.connect__text(href= "tel:" + item.link)= item.number
                        if item.label
                          .connect__label= item.label
                        if item.descr
                          .connect__descr= item.descr
                .callback
                  button.button.button-secondary.button-callback(data-fancybox, data-type="inline", data-src="#callback-form") Заказать звонок
